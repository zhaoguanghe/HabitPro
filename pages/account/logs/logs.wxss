.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.userinfo {
  margin-top: 0rpx;
  width: auto;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  transition: all 300ms ease;
}

.headimg {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx 50rpx;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  float: left;
  overflow: hidden;
}

.userinfo-nickname {
  font-size: 14px;
  /*color: #007aff;*/
}

.fff{
  background: #ffffff;
}
.module{
  margin-top: 20rpx;
}

.option{
    position: relative;
    border-bottom:1rpx solid #e0e0e0;
    font-family:iconfont;
    padding:10px 0;
    margin-left:15px;
    font-size: 14px;
}

.module .option:last-child{
    border-bottom: none;
}
.option:before{
    position: absolute;
    right:15px;
    top:50%;
    width: 14px;
    height:14px;
    margin-top:-7px;
}
.optionTitle{
    font-family:"iconfont";
}
.optionTitle:before{
    font-size: 18px;
    margin-right: 10px;
}
.collect:before{
    color: #FA7558;
}
.record:before{
    color: #FFC324;
}
.address:before{
    color: #673ab7;
}
.idea:before{
    color: #0BD075;
}
.service:before{
    color: #25B3FF;
}
.technology:before{
    color: #9e9e9e;
}